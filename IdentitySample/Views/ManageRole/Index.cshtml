@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "لیست نقش ها";
}

@*<a asp-controller="ManageRole" asp-action="AddRole" class="btn btn-success">اضافه کردن نقش جدید</a>*@
@Html.AntiForgeryToken()
@if (!Model.Any())
{
    <h1>مقامی یافت نشد</h1>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-body">
                Role Name : <b>@Model[i].Name</b>
            </div>
            <div class="card-footer">
                <form asp-controller="ManageRole" asp-action="DeleteRole" method="post" asp-route-id="@Model[i].Id">

                    <a asp-controller="ManageRole" asp-action="EditRole" asp-route-id="@Model[i].Id"
                       class="btn btn-primary">ویرایش</a>

                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
    }
}